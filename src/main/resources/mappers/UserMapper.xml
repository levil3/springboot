<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spt.springboot.dao.UserDao">
    <select id="queryUserByName" resultType="com.spt.springboot.pojo.User">
        select username userName,password pwd from user_t where username = #{name}
    </select>

    <insert id="insertUser" parameterType="user">
        insert into user_t values(#{userName},#{pwd})
    </insert>

    <update id="updateUser" parameterType="user">
        update user_t set password = #{pwd} where username = #{userName}
    </update>

    <delete id="deleteUser" parameterType="User">
        delete from user_t where username = #{userName}
    </delete>

    <select id="queryUserByParams" parameterType="com.spt.springboot.query.UserQuery" resultType="User">
        select username userName,password pwd from user_t
        <where>
            <if test="userName != null and userName != ''">
                and username like concat('%',#{userName},'%')
            </if>
        </where>
    </select>
</mapper>

